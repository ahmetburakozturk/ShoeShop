@model ShoeShop.Dtos.UserDto

@{
    ViewData["Title"] = "Details";
}


<div class="container-sm" style="width: 60%;">
    <h1 style="color: orangered;">Bilgilerim</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (ViewBag.State != null)
            {
                if (ViewBag.State == false)
                {
                    <div class="alert alert-danger">Şifreniz Yanlış!</div>
                }
                else
                {
                    <div class="alert alert-success">Değişiklikler Uygulandı!</div>
                }
            }
            
            
            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label font-weight-bold"></label>
                    <input asp-for="FullName" class="form-control"/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label font-weight-bold"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label font-weight-bold"></label>
                    <input asp-for="Address" class="form-control"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label font-weight-bold"></label>
                    <input asp-for="PhoneNumber" class="form-control"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <hr/>
                <div>
                    <h5 style="background-color: rgb(245, 245, 245); color: black; border-radius: 10px; padding: 7px 15px;">Şifre Değiştir</h5>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">Eski Şifre</label>
                        <input asp-for="oldPassword" class="form-control"/>
                        <span asp-validation-for="oldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">Yeni Şifre</label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-success font-weight-bold px-5 py-2"/>
                </div>
            </form>
        </div>
    </div>
</div>



