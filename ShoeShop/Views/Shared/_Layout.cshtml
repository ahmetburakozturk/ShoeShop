<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css" type="text/css"/>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="/StyleSheet.css" type="text/css"/>
</head>
<body style="background-color: rgb(247,247,247)">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index"><img src="/images/shoe3.png" alt="Logo" class="img-fluid"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mx-auto">
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control sm-2" type="search" placeholder="Ürün Ara..." aria-label="Search" style="width: 35em">
                            <button class="btn btn-dark my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </ul>
                    <div class="d-flex">
                        <button class="btn btn-outline-dark ms-3"><i class="fa-solid fa-basket-shopping mr-2"></i>Sepetim</button>
                        <button class="btn btn-outline-dark ms-3" style="border-radius: 50px;"><i class="fa-solid fa-user"></i></button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-5">
        <main role="main" class="pb-3">
            <div class="container-sm">
                <div class="mt-3">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>  

    <footer class="border-top footer text-muted">
        <div class="container d-flex align-items-center flex-column">
            &copy; 2022 - ShoeShop
        </div>
    </footer>
        <script src="https://kit.fontawesome.com/3417e16898.js" crossorigin="anonymous"></script>
        <script src="sweetalert2.all.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
