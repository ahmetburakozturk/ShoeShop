@model ProductListResponse

<div class="col-3 mt-3">
    <div class="card d-flex align-items-center shadow p-3 mb-5 bg-white rounded border border-warning" style="background-color: rgb(252, 252, 252); ">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="width: 100%; height: 100%">
        <div class="card-body d-flex align-items-center flex-column" style="background-color: rgb(252, 252, 252);">
            <h5>@Model.BrandName</h5>
            <h6 class="card-title mt-1">@Model.Name</h6>
            <p class="card-text mt-1"><span class="text-danger font-weight-bold" style="text-decoration: line-through; text-decoration-color: red">@Model.Price TL </span><span class="text-light bg-success font-weight-bold p-2 ml-1" style="border-radius: 5px">@(Convert.ToInt32(Model.Price * (1 - Model.Discount))) TL</span></p>
            <a href="#" class="btn btn-outline-primary">Ürüne Git</a>
        </div>
    </div>
</div>